<h1>Edit Exercise Movement</h1>

<form action="/movements/<%= @movement.generate_slug %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <label for="name">Name:</label>
  <input type="text" name="movement[name]" id="name" value="<%= @movement.name %>"><br></br>

  <label for="instructions">Instructions:</label>
  <input type="text" name="movement[instructions]" id="instructions" value="<%= @movement.instructions %>"><br></br>

  <label for="target_area">Target Area:</label>
  <input type="text" name="movement[target_area]" id="target_area" value="<%= @movement.target_area %>"><br></br>

</form>
