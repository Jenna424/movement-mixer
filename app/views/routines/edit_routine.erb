<h1>Edit Workout Routine</h1>

<% if flash.has?(:message) %>
  <p><strong><%= flash[:message] %></strong></p>
<% end %>

<form action="/routines/<%= @routine.generate_slug %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <label for="name">Name:</label>
  <input type="text" name="routine[name]" id="name" value="<%= @routine.name %>"><br></br>

  <label for="training_type">Training Type:</label>
  <input type="text" name="routine[training_type]" id="training_type" value="<%= @routine.training_type %>"><br></br>

  <label for="duration">Duration:</label>
  <input type="text" name="routine[duration]" id="duration" value="<%= @routine.duration %>"><br></br>

  <label for="difficulty">Difficulty Level:</label>
  <input type="text" name="routine[difficulty_level]" id="difficulty" value="<%= @routine.difficulty_level %>"><br></br>

  <label for="equipment">Equipment:</label>
  <input type="text" name="routine[equipment]" id="equipment" value="<%= @routine.equipment %>"><br></br>

  <label><strong>Select Exercises for Your Workout! Choose basic exercises movements from the list below:</strong></label><br></br>

  <% Movement.all.each do |movement| %>
    <input type="checkbox" name="routine[movement_ids][]" value="<%= movement.id %>" <%= 'checked' if @routine.movements.include?(movement) %>><%= movement.name %></input>
  <% end %>

  <br></br>

  <label><strong>And/Or, Create a New Movement to Add to Your Workout Routine:</strong></label><br></br>

  <label for="name">Name:</label>
  <input type="text" name="movement[name]" id="name"><br></br>

  <label for="instructions">Instructions:</label>
  <input type="text" name="movement[instructions]" id="instructions"><br></br>

  <label for="target_area">Target Area:</label>
  <input type="text" name="movement[target_area]" id="target_area"><br></br>

  <label for="reps">Reps:</label>
  <input type="text" name="movement[reps]" id="reps"><br></br>

  <label for="modification">Modification:</label>
  <input type="text" name="movement[modification]" id="modification"><br></br>

  <label for="challenge">Challenge:</label>
  <input type="text" name="movement[challenge]" id="challenge"><br></br>

  <input type="submit" value="Edit Routine">
</form>
